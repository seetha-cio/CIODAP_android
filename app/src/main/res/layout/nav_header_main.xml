<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="50dp"
        android:layout_height="103dp"
        android:background="@color/colorMenuBlue"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="55dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dashAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/nav_alert" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="55dp"
            android:gravity="center_horizontal"
            android:background="@drawable/dash_header_nav_menu"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dashMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/nav_message" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="55dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dashRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/nav_refresh" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/dashProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/user_profile" />
    <ImageView
        android:id="@+id/dashProfileLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="10dp"
        android:src="@drawable/user_logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/colorMenuBlue"
        android:paddingTop="10dp"
        android:paddingLeft="72dp"
        android:text="ConnectedIO User"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android.studio@android.com" />

</LinearLayout>
